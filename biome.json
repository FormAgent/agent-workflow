{
  "$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "style": {
        "useImportType": "error"
      }
    },
    "ignore": [
      "**/node_modules/**",
      "**/dist/**",
      "**/.git/**",
      "**/biome.json"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 80,
    "formatWithErrors": false,
    "ignore": [
      "**/node_modules/**",
      "**/dist/**",
      "**/.git/**",
      "**/biome.json"
    ]
  },
  "javascript": {
    "formatter": {}
  }
}
